<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <form id="add_client_form">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="height">Height(INCHES):</label>
        <input type="number" id="height" name="height" required><br><br>

        <label for="weight">Weight(LBS):</label>
        <input type="number" id="weight" name="weight" required><br><br>

        <label for="experience">Years of Experience:</label>
        <input type="number" id="experience" name="experience" required><br><br>



        <label for="phone">Phone Number:</label>
        <input type="text" id="phone" name="phone" required><br><br>

        <button type="button" onclick="create_client()">Submit</button>
    </form>

    <table class="profile_clients_table">
    <tr>
        <th>Name</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Experience</th>
        <th>Phone</th>

        <th>Delete</th>
        <th>Edit</th>


    </tr>
  
  
        <% clients.forEach(function(client) { %>

        
         
         <tr>
           
          <td><%= client.name %></td>

          <td><%= client.height %></td>

          <td><%= client.weight %></td>
          <td><%= client.exp %></td>
          <td><%= client.phone %></td>

          <td>

          <button  onclick="delete_client('<%= client.c_id %>')">Delete Client</button>
        </td>
        <td>
          <button onclick="edit_client('<%= client.c_id %>')"> Edit Client </button>
        </td>
     
        
        </tr>
        <% }) %>
    </table>



    <form id="add_excercise_form">
        <label for="e_name">Excercise Name:</label>
        <input type="text" id="e_name" name="e_name" required><br><br>

        <label for="rounds">Rounds:</label>
        <input type="number" id="rounds" name="rounds" required><br><br>

        <label for="time">Round Time:</label>
        <input type="number" id="time" name="time" required><br><br>

        <label for="rest">Rest:</label>
        <input type="number" id="rest" name="rest" required><br><br>

        <label for="link">Video Link:</label>
        <input type="text" id="link" name="link" required><br><br>



        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required><br><br>

        <button type="button" onclick="create_excercise()">Submit</button>
    </form>



    <table class="profile_excercises_table">
        <tr>
            <th>Name</th>
            <th>Rounds</th>
            <th>Round Time</th>
            <th>Rest</th>
            <th>Link</th>
            <th>Description</th>
    
            <th>Delete</th>
            <th>Edit</th>
    
    
        </tr>
      
      
            <% excercises.forEach(function(excercise) { %>
    
            
             
             <tr>
               
              <td><%= excercise.name %></td>
              <td><%= excercise.rounds %></td>
              <td><%= excercise.time %></td>
              <td><%= excercise.rest %></td>
              <td><%= excercise.link %></td>
            
              <td><%= excercise.description %></td>

    
              
    
              <td>
    
              <button  onclick="delete_exercise('<%= excercise.e_id %>')">Delete Client</button>
            </td>
            <td>
              <button onclick="edit_excercise('<%= excercise.e_id %>')"> Edit Client </button>
            </td>
         
            
            </tr>
            <% }) %>
     </table>
    

     <a href="/workout">create workout</a>



    <script src="/js/client_requests.js"></script>
    <script src="/js/excercise_requests.js"></script>
</body>
</html>