<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Bebas+Neue&family=Concert+One&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Jaro:opsz@6..72&family=Kadwa:wght@400;700&family=Lacquer&family=Londrina+Solid:wght@100;300;400;900&family=Luckiest+Guy&family=Miriam+Libre:wght@400..700&family=Monda:wght@400..700&family=Monoton&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Permanent+Marker&family=Protest+Revolution&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Rock+Salt&family=Saira+Condensed:wght@100;200;300;400;500;600;700;800;900&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
   <section class="client_frame">
    <div class="client_frame_title">
        <p>Clients</p>
    </div>

    <table class="profile_clients_table">
    
      
      
            <% clients.forEach(function(client) { %>
    
            
             
             <tr>
               
              <td><p><img src="/icons/name.png" alt=""> <%= client.name %> </p></td>
    
              <td> <p><img src="/icons/height.png" alt=""> <%= client.height %> Inches </p></td>
    
              <td><p><img src="/icons/weight.png" alt=""><%= client.weight %> Lbs </p> </td>
              <td> <p> <img src="/icons/exp.png" alt=""><%= client.exp %> Years </p></td>
              <td><p><img src="/icons/phone.png" alt=""><%= client.phone %></p></td>
    
              <td>
    
              <button  onclick="delete_client('<%= client.c_id %>')"> <img src="/icons/delete.png" alt="">Delete</button>
            </td>
            <td>
              <button onclick="edit_client('<%= client.c_id %>')"><img src="/icons/edit.png" alt=""> Edit </button>
            </td>
         
            
            </tr>
            <% }) %>
        </table>

        <div class="add_client_frame">
          
            <form id="add_client_form">
                <div class="add_client_frame_title"><p>Add Client</p></div>

                <div class="label_frame">
                <label for="name"><img src="/icons/name.png" alt=""></label>
                <input type="text" id="name" name="name" placeholder="Name..." ><br><br>
            </div>
        
            <div class="label_frame">
                <label for="height"><img src="/icons/height.png" alt=""></label>
                <input type="number" id="height" name="height" placeholder="Height..." ><br><br>
            </div>
        
            <div class="label_frame">
                <label for="weight"><img src="/icons/weight.png" alt=""></label>
                <input type="number" id="weight" name="weight" placeholder="Weight..."><br><br>
            </div>
        
            <div class="label_frame">
                <label for="experience"><img src="/icons/exp.png" alt=""></label>
                <input type="number" id="experience" name="experience" placeholder="Experience..." ><br><br>
            </div>
        
        
        
            <div class="label_frame">
                <label for="phone"><img src="/icons/phone.png" alt=""></label>
                <input type="text" id="phone" name="phone" required placeholder="Phone Number..."><br><br>
            </div>
        
                <button type="button" onclick="create_client()">Add Client</button>
            </form>

        </div>

   </section>

   




    <form id="add_excercise_form">
        <label for="e_name">Excercise Name:</label>
        <input type="text" id="e_name" name="e_name" required><br><br>

        <label for="rounds">Rounds:</label>
        <input type="number" id="rounds" name="rounds" required><br><br>

        <label for="time">Round Time:</label>
        <input type="number" id="time" name="time" required><br><br>

        <label for="rest">Rest:</label>
        <input type="number" id="rest" name="rest" required><br><br>

        <label for="link">Video Link:</label>
        <input type="text" id="link" name="link" required><br><br>



        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required><br><br>

        <button type="button" onclick="create_excercise()">Submit</button>
    </form>



    <table class="profile_excercises_table">
        <tr>
            <th>Name</th>
            <th>Rounds</th>
            <th>Round Time</th>
            <th>Rest</th>
            <th>Link</th>
            <th>Description</th>
    
            <th>Delete</th>
            <th>Edit</th>
    
    
        </tr>
      
      
            <% excercises.forEach(function(excercise) { %>
    
            
             
             <tr>
               
              <td><%= excercise.name %></td>
              <td><%= excercise.rounds %></td>
              <td><%= excercise.time %></td>
              <td><%= excercise.rest %></td>
              <td><%= excercise.link %></td>
            
              <td><%= excercise.description %></td>

    
              
    
              <td>
    
              <button  onclick="delete_exercise('<%= excercise.e_id %>')">Delete Client</button>
            </td>
            <td>
              <button onclick="edit_excercise('<%= excercise.e_id %>')"> Edit Client </button>
            </td>
         
            
            </tr>
            <% }) %>
     </table>
    

     <a href="/workout">create workout</a>

    <table class="profile_workout_table">
        <tr>
        <th>Name</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>



        <% workouts.forEach(function(workout) { %>

            <tr>
            <td><%= workout.name %></td>
            <td>
    
                <button  onclick="delete_workout('<%= workout.w_id %>')">Delete </button>
              </td>
              <td>
                <button onclick="edit_workout('<%=workout.w_id %>')"> Edit </button>
              </td>
        </tr>
        <% }) %>

        


    </table>



    <script src="/js/client_requests.js"></script>
    <script src="/js/excercise_requests.js"></script>
    <script src="/js/workouts_requests.js"></script>
</body>
</html>