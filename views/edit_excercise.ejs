<body id="create_client_body">

    <section class="row_frame_space_between" id="username_and_logout"> 
        <p class="title_text">Veortiz1</p>
        <button class="small_button" id="red_button">Logout</button>

    </section>



    <button onclick="add_client_home()" class="small_button" id="red_button">Go Back</button>


    <p class="title_text">Edit Exercise</p>
    <img src="/icons/edit.png" class="add_icon" alt="">



    <p id="edit_exercise_name" class="edit_text"> <span class="category">Current Name: </span> <%= name %></p>
    <p id="edit_rounds" class="edit_text"><span class="category">Current Rounds: </span><%= rounds %></p>
    <p id="edit_time" class="edit_text"><span class="categroy">Current Time: </span><%= time %></p>
    <p id="edit_rest" class="edit_text"><span class="category">Current Rest: </span><%= rest %></p>
    <p id="edit_link" class="edit_text"><span class="category">Current Link: </span><%= link %></p>
    <p id="edit_description" class="edit_text"><span class="category">Current Description: </span><%= description %></p>

    


    <form id="add_excercise_form">
        <p class="error" id="exercise_form_error"></p>
        <label for="name">Excercise Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="rounds">Rounds:</label>
        <input type="text" id="rounds" name="rounds" required><br><br>

        <label for="time">Round Time:</label>
        <input type="text" id="time" name="time" required><br><br>

        <label for="rest">Rest:</label>
        <input type="text" id="rest" name="rest" required><br><br>

        <label for="link">Video Link:</label>
        <input type="text" id="link" name="link" required><br><br>



        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required><br><br>

        <input type="hidden" id="csrf_edit_exercise" value="<%= csrf %>">

        <button type="button" onclick="edit_excercise_form()">Submit</button>
    </form>

    <script src="/js/excercise_requests.js"></script>
    <script src="/js/redirect.js"></script>
    
</body>
</html>